<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data></data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.fraggjkee.smsconfirmationview.SmsConfirmationView
            android:id="@+id/sms_code_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/editText_carrierNumber"
            app:scv_codeLength="6"
            app:scv_showCursor="false"
            app:scv_symbolBackgroundColor="@color/white"
            app:scv_symbolTextColor="@color/black" />
    </LinearLayout>
</layout>